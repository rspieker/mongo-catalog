{
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "bracketSameLine": false,
    "jsxSingleQuote": false,
    "quoteProps": "as-needed",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "embeddedLanguageFormatting": "auto",
    "ignore": [
        "package.json",
        "package-lock.json"
    ],
    "overrides": [
        {
            "files": [
                "src/**/*.json",
                "config/**/*.json",
                "test/**/*.json",
                "work/**/*.json",
                ".prettierrc*"
            ],
            "options": {
                "parser": "json-stringify"
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "always",
                "printWidth": 80
            }
        }
    ]
}
